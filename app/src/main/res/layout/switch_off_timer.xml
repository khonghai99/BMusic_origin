<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_recyclerview">

    <TextView
        android:id="@+id/title_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hẹn giờ"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/content_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_timer"
        android:layout_margin="4dp"
        />

    <SeekBar
        android:id="@+id/seekbar_timer"
        android:layout_below="@+id/content_timer"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/current_time_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 phút"
        android:layout_below="@+id/seekbar_timer"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        />

    <TextView
        android:id="@+id/total_time_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 phút"
        android:layout_below="@id/seekbar_timer"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        />

</RelativeLayout>